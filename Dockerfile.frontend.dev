FROM node:20-slim

WORKDIR /app

# Copy package files first for better caching
COPY frontend/package*.json ./

# Install dependencies
RUN npm install

# Expose port for frontend
EXPOSE 3000

# Set working directory to app root
WORKDIR /app

# Run Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
